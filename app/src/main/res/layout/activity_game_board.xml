<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoppers.com.tamir.hoopers.board.GameBoardActivity"
    android:background="@color/app_background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_small"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/text_color"
        android:layout_below="@id/logo"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-20dp"
        android:text="1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/undo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/undo"
        android:layout_alignParentRight="true"
        android:layout_below="@id/logo"
        android:background="@null"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-28dp"/>



    <TableLayout android:id="@+id/game_board"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/level_name"
        android:layout_centerHorizontal="true">
        <TableRow>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowLeftLeaf"
                custom:index="0"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowLeaf"
                custom:index="1"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowRightLeaf"
                custom:index="2"/>
        </TableRow>

        <TableRow>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/oddRowLeftLeaf"
                custom:index="3"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/oddRowRightLeaf"
                custom:index="4"/>
        </TableRow>

        <TableRow>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowLeftLeaf"
                custom:index="5"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowLeaf"
                custom:index="6"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowRightLeaf"
                custom:index="7"/>
        </TableRow>

        <TableRow>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/oddRowLeftLeaf"
                custom:index="8"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/oddRowRightLeaf"
                custom:index="9"/>
        </TableRow>

        <TableRow>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowLeftLeaf"
                custom:index="10"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowLeaf"
                custom:index="11"/>
            <hoppers.com.tamir.hoopers.board.BoardLeafView
                style="@style/evenRowRightLeaf"
                custom:index="12"/>
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:id="@+id/time_played_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/game_board"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_played_text"
            android:layout_marginRight="2dp"
            android:textColor="@color/text_color"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/time_played_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:text="00:00:00"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/solution_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_played_layout">
        <LinearLayout
            android:id="@+id/view_solution_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/view_solution_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/level_solution_viewed" />
            <TextView
                android:id="@+id/view_solution_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:text="@string/view_solution_text"/>
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/solution_navigation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <ImageButton
                android:id="@+id/previous_solution_step_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/previous_solution_step"
                android:background="@null"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <ImageButton
                android:id="@+id/next_solution_step_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_solution_step"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
